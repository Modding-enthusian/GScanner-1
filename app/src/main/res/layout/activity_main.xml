<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

//  Insert drawable
// android:background = "@drawable/xxx"

    //  GScanner Text
    <TextView
        android:id              = "@+id/login_title"
        android:layout_width    = "match_parent"
        android:layout_height   = "wrap_content"
        android:text            = "GScanner"
        android:textColor       = "@color/black"
        android:textSize        = "50dp"
        android:textStyle       = "bold"
        android:layout_margin   = "50dp"
        android:gravity         = "center"
    />

    //  Username Field
    <EditText
        android:id                  = "@+id/login_username"
        android:layout_width        = "match_parent"
        android:layout_height       = "wrap_content"
        android:layout_marginTop    = "20dp"
        android:layout_marginBottom = "50dp"
        android:layout_marginLeft   = "50dp"
        android:layout_marginRight  = "50dp"
        android:layout_below        = "@+id/login_title"
        android:background          = "#30ffffff"
        android:hint                = "Username"
        android:textColorHint       = "@color/black"
        android:textColor           = "@color/black"
        android:textSize            = "20dp"
        android:padding             = "10dp"
        android:drawableLeft        = "@drawable/ic_baseline_directions_car_24"
        android:drawablePadding     = "20dp"
    />

    //  Password Field
    <EditText
        android:id                  = "@+id/login_password"
        android:layout_width        = "match_parent"
        android:layout_height       = "wrap_content"
        android:layout_below        = "@+id/login_username"
        android:layout_marginTop    = "0dp"
        android:layout_marginBottom = "50dp"
        android:layout_marginLeft   = "50dp"
        android:layout_marginRight  = "50dp"
        android:background          = "#30ffffff"
        android:hint                = "Password"
        android:inputType           = "textPassword"
        android:textColorHint       = "@color/black"
        android:textColor           = "@color/black"
        android:textSize            = "20dp"
        android:padding             = "10dp"
        android:drawableLeft        = "@drawable/ic_baseline_security_24"
        android:drawablePadding     = "20dp"
        />

    //  Login Button
    <com.google.android.material.button.MaterialButton
        android:id                      = "@+id/login_btn_confirm"
        android:layout_width            = "wrap_content"
        android:layout_height           = "wrap_content"
        android:layout_below            = "@+id/login_password"
        android:layout_centerHorizontal = "true"
        android:text                    = "Log In"
        android:margin                  = "10dp"
        //android:backgroundTint        = ""
    />

    //  Forgot Password
    <!--
    <TextView
        android:id                      = "@+id/login_forgotPassword"
        android:layout_width            = "wrap_content"
        android:layout_height           = "wrap_content"
        android:layout_below            = "@+id/login_btn_confirm"
        android:layout_centerHorizontal = "true"
        android:layout_margin           = "5dp"
        android:text                    = "Forgot Failword?"
        android:textColor               = "@color/black"
        />
    -->

</RelativeLayout>